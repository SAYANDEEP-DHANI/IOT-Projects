#include <FirebaseESP32.h>
#include <WiFiClient.h>
#include <WiFi.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define FIREBASE_HOST "***"
#define FIREBASE_AUTH "***"
#define WIFI_SSID "***"
#define WIFI_PASSWORD "***"

FirebaseData firebaseData;
LiquidCrystal_I2C lcd(0x27, 16, 2);
int gasValue;
#define GAS_SENSOR_PIN 32  // GPIO32 for the gas sensor

void setup() {
    Serial.begin(115200);  // Start Serial monitor

    // Connect to Wi-Fi
    WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
    Serial.print("Connecting to WiFi...");
    while (WiFi.status() != WL_CONNECTED) {
        delay(500);
        Serial.print(".");
    }
    Serial.println("\nConnected to WiFi!");

    // Initialize Firebase
    Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
    Firebase.reconnectWiFi(true);  // Auto-reconnect if disconnected

    // Initialize LCD
    Wire.begin(21, 22);  // Set ESP32 I2C pins (SDA = 21, SCL = 22)
    lcd.init();
    lcd.backlight();

    pinMode(GAS_SENSOR_PIN, INPUT);
    pinMode(26,OUTPUT);
    void buzzer();
}

void loop() {
    gasValue = analogRead(GAS_SENSOR_PIN);
    Serial.print("Gas Sensor Value: ");
    Serial.println(gasValue);

    // Send data to Firebase
    if (Firebase.setInt(firebaseData, "/gasSensor/value", gasValue)) {
        Serial.println("Data sent to Firebase!");
    } else {
        Serial.println("Firebase error: " + firebaseData.errorReason());
    }

    // Update LCD Display
    lcd.clear();
    lcd.setCursor(0, 0);
    if (gasValue > 500) {
        Serial.println("⚠️ Gas Detected! Take Action! ⚠️");
        lcd.print("Air is POLLUTED!");
        buzzer();
    } else {
        lcd.print("Air Quality:Safe");
    }

    lcd.setCursor(0, 1);
    lcd.print("Gas: ");
    lcd.print(gasValue);

    delay(2000);  // Wait 2 seconds before next reading
}
void buzzer()
{
  digitalWrite(26,HIGH);
  delay(300);
  digitalWrite(26,LOW);
  delay(300);
  }